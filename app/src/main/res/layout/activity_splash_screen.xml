<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.splashscreen.SplashScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_welcome_to"
        app:layout_constraintVertical_bias="0.9"
        android:textColor="@color/white"
        android:fontFamily="@font/font_road_rage"
        android:textSize="@dimen/_28ssp"
        android:id="@+id/tv_ss_title"
        app:layout_constraintBottom_toTopOf="@id/iv_splash_screen_title"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/iv_splash_screen_title"
        android:layout_width="@dimen/_250sdp"
        app:layout_constraintVertical_bias="0.6"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/ic_title_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>