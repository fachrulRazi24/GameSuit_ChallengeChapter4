<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.landingpage.LandingFragment1">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/bg_game_landing1"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_fragment1"
        android:layout_width="wrap_content"
        android:layout_height ="wrap_content"
        android:background="@drawable/bg_action_button"
        android:src="@drawable/ic_landing1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_160sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_fragment1"/>

    <TextView
        android:id="@+id/tv_fragment1"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/text_player_vs_player"
        android:textColor="@color/white"
        android:fontFamily="@font/font_road_rage"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_fragment1"/>

</androidx.constraintlayout.widget.ConstraintLayout>